{
  "name": "reuse-me",
  "version": "0.0.1",
  "private": true,
  "description": "Copyright and License management solutions for GitHub",
  "author": "Kevin de Jong",
  "license": "MIT",
  "homepage": "https://github.com/dev-build-deploy/reuse-me",
  "keywords": [
    "probot",
    "github"
  ],
  "bugs": {
    "url": "https://github.com/dev-build-deploy/reuse-me/issues"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:cli": "ncc build -o lib/cli src/entrypoints/cli.ts",
    "build:action": "ncc build -o lib/action src/entrypoints/action.ts",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts test/requirements.test.ts",
    "format": "prettier --write **/*.ts && prettier --write **/**/*.ts"
  },
  "bin": {
    "reuse-me": "./bin/reuse-me"
  },
  "dependencies": {
    "@actions/artifact": "^2",
    "@actions/core": ">=1",
    "@actions/github": ">=6",
    "@dev-build-deploy/diagnose-it": ">=1",
    "@dev-build-deploy/reuse-it": ">=0",
    "@dev-build-deploy/sarif-it": ">=0",
    "commander": "^12.1.0",
    "simple-git": ">=3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@swc/jest": ">=0",
    "@tsconfig/node20": "^20",
    "@types/jest": ">=29",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": ">=7",
    "@typescript-eslint/parser": ">=7",
    "@vercel/ncc": ">=0",
    "eslint": ">=8",
    "eslint-import-resolver-typescript": ">=3",
    "eslint-plugin-import": ">=2",
    "eslint-plugin-jest": ">=28",
    "globals": "^15.14.0",
    "jest": ">=29",
    "npm-run-all2": ">=6",
    "prettier": ">=3",
    "ts-jest": ">=29",
    "typescript": ">=5"
  },
  "engines": {
    "node": ">=20"
  }
}
